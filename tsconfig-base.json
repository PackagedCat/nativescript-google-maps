{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": [
            "es2017",
            "dom"
        ],
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "extendedDiagnostics": true,
        "pretty": true,
        "composite": true,
        "plugins": [
            {
                "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
                "type": "raw"
            }
        ],
        "paths": {
            "*": [
                "../../node_modules/*"
            ]
        }
    }
}
